{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@screens/*": ["./src/screens/*"],
      "@navigations/*": ["./src/navigations/*"],
      "@services/*": ["./src/services/*"],
      "@infra/*": ["./src/infra/*"],
    }
  },
  "include": ["src", "metro.config.js", "babel.config.js", "nativewind-env.d.ts"]
}

